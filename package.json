{
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "mkdir -p node_modules/react && ln -sf ../preact/jsx-runtime node_modules/react/jsx-runtime 2>/dev/null || true",
    "lint": "bun node_modules/.bin/oxlint .",
    "lint:fix": "bun node_modules/.bin/oxlint --fix .",
    "format": "bun x biome format --write .",
    "format:check": "bun x biome format .",
    "typecheck": "tsc --build",
    "knip": "knip --include files,dependencies,exports --no-config-hints",
    "knip:all": "knip",
    "check": "bun run lint && bun run typecheck && bun run knip",
    "test": "NODE_ENV=test bun test",
    "test:coverage": "NODE_ENV=test bun test --coverage",
    "test:coverage:lcov": "NODE_ENV=test bun test --coverage --coverage-reporter=lcov",
    "cleanup:worktrees": "bash scripts/cleanup-worktrees.sh",
    "cleanup:db": "cd packages/e2e && bash scripts/cleanup-test-db.sh",
    "cleanup:all": "bun run cleanup:worktrees && bun run cleanup:db",
    "test:e2e": "cd packages/e2e && playwright test",
    "test:e2e:clean": "bun run cleanup:all && bun run test:e2e"
  },
  "devDependencies": {
    "@testing-library/preact": "^3.2.4",
    "dotenv": "17.2.3",
    "happy-dom": "^20.1.0",
    "knip": "^5.80.2",
    "oxlint": "^1.39.0",
    "typescript": "5.9.3"
  }
}
