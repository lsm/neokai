{
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"postinstall": "mkdir -p node_modules/react && ln -sf ../preact/jsx-runtime node_modules/react/jsx-runtime 2>/dev/null || true",
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --build",
		"check": "bun run lint && bun run typecheck",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov",
		"cleanup:worktrees": "bash scripts/cleanup-worktrees.sh",
		"cleanup:db": "cd packages/e2e && bash scripts/cleanup-test-db.sh",
		"cleanup:all": "bun run cleanup:worktrees && bun run cleanup:db",
		"test:e2e": "cd packages/e2e && playwright test",
		"test:e2e:clean": "bun run cleanup:all && bun run test:e2e"
	},
	"devDependencies": {
		"@testing-library/preact": "^3.2.4",
		"dotenv": "17.2.3",
		"happy-dom": "^20.0.11",
		"oxlint": "1.35.0",
		"prettier": "3.7.4",
		"typescript": "5.9.3"
	}
}
