{
	"name": "neokai",
	"private": true,
	"license": "Apache-2.0",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "make dev",
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"typecheck": "tsc --build --noEmit",
		"knip": "knip --include files,dependencies,exports --no-config-hints",
		"knip:all": "knip",
		"check": "bun run lint && bun run typecheck && bun run knip",
		"test": "bun run test:daemon && bun run test:shared && bun run test:cli && bun run test:web",
		"test:coverage": "bun run test:daemon:coverage && bun run test:shared:coverage && bun run test:cli:coverage && bun run test:web:coverage",
		"test:coverage:lcov": "NODE_ENV=test bun test --coverage --coverage-reporter=lcov",
		"test:daemon": "cd packages/daemon && bun test",
		"test:daemon:coverage": "cd packages/daemon && bun test --coverage",
		"test:web": "cd packages/web && vitest run",
		"test:web:coverage": "cd packages/web && vitest run --coverage",
		"test:shared": "cd packages/shared && bun test",
		"test:cli": "cd packages/cli && bun test",
		"test:e2e": "cd packages/e2e && playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"@testing-library/preact": "3.2.4",
		"dotenv": "^17.2.3",
		"happy-dom": "20.3.7",
		"knip": "5.82.1",
		"oxlint": "1.41.0",
		"typescript": "5.9.3"
	}
}
