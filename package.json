{
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "oxlint .",
		"lint:fix": "oxlint --fix .",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --build",
		"check": "bun run lint && bun run typecheck",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov"
	},
	"devDependencies": {
		"oxlint": "1.31.0",
		"prettier": "3.4.2",
		"typescript": "5.9.3"
	}
}
