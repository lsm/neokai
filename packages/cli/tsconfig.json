{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"types": ["bun"],
		"paths": {
			"@/*": ["./src/*"],
			"@neokai/shared": ["../shared/src/mod.ts"],
			"@neokai/shared/*": ["../shared/src/*"],
			"@neokai/daemon": ["../daemon/main.ts"],
			"@neokai/daemon/*": ["../daemon/src/*"]
		}
	},
	"include": ["src/**/*", "main.ts"],
	"exclude": ["node_modules", "dist", "tests/**/*", "test-*.ts"]
}
