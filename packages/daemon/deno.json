{
  "name": "@liuboer/daemon",
  "version": "0.1.0",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --allow-ffi --watch main.ts",
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --allow-run --allow-ffi main.ts",
    "test": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi tests/",
    "test:watch": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi --watch tests/",
    "test:coverage": "deno test --allow-net --allow-read --allow-write --allow-env --allow-ffi --coverage=coverage tests/ && deno coverage coverage --lcov --output=coverage/lcov.info"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@anthropic-ai/claude-agent-sdk": "npm:@anthropic-ai/claude-agent-sdk@^0.1.43",
    "@liuboer/shared": "../shared/src/mod.ts"
  }
}
