{
	"name": "@neokai/daemon",
	"version": "0.5.0",
	"type": "module",
	"license": "Apache-2.0",
	"main": "main.ts",
	"exports": {
		".": "./main.ts",
		"./app": "./src/app.ts",
		"./config": "./src/config.ts",
		"./routes/setup-websocket": "./src/routes/setup-websocket.ts",
		"./sdk-cli-resolver": "./src/lib/agent/sdk-cli-resolver.ts"
	},
	"scripts": {
		"dev": "bun run --watch main.ts",
		"start": "NODE_ENV=production bun run main.ts",
		"test": "bun test tests/unit tests/integration tests/providers tests/online",
		"test:unit": "bun test --preload=./tests/unit/setup.ts --coverage --coverage-reporter=text ./tests/unit",
		"test:integration": "bun test --preload=./tests/unit/setup.ts --coverage --coverage-reporter=text ./tests/integration",
		"test:online": "bun test --coverage --coverage-reporter=text ./tests/online"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "^0.2.39",
		"@neokai/shared": "workspace:*",
		"simple-git": "3.30.0"
	},
	"devDependencies": {
		"@types/bun": "latest"
	}
}
