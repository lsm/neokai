{
	"name": "@liuboer/daemon",
	"version": "0.1.0",
	"type": "module",
	"main": "main.ts",
	"exports": {
		".": "./main.ts",
		"./app": "./src/app.ts",
		"./config": "./src/config.ts",
		"./routes/setup-websocket": "./src/routes/setup-websocket.ts"
	},
	"scripts": {
		"dev": "bun run --watch main.ts",
		"start": "NODE_ENV=production bun run main.ts",
		"test": "bun test tests/unit tests/integration tests/providers tests/online",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"test:providers": "bun test tests/providers",
		"test:online": "bun test tests/online",
		"test:watch": "bun test --watch tests/unit tests/integration",
		"test:agent": "bun test tests/unit/agent tests/integration/agent",
		"test:session": "bun test tests/unit/session tests/integration/session",
		"test:rpc": "bun test tests/unit/rpc tests/integration/rpc",
		"test:core": "bun test tests/unit/core tests/integration/components",
		"test:coverage": "bun test --coverage tests/unit tests/integration tests/providers tests/online",
		"test:coverage:lcov": "bun test --coverage --coverage-reporter=lcov tests/unit tests/integration tests/providers tests/online"
	},
	"dependencies": {
		"@anthropic-ai/claude-agent-sdk": "0.2.17",
		"@liuboer/shared": "workspace:*",
		"dotenv": "17.2.3",
		"simple-git": "3.30.0"
	},
	"devDependencies": {
		"@types/bun": "latest"
	}
}
