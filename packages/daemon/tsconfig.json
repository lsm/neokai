{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@liuboer/shared": ["../shared/src/mod.ts"],
      "@liuboer/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "main.ts", "tests/**/*", "test-*.ts"],
  "exclude": ["node_modules", "dist"]
}
