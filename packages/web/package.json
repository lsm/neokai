{
	"name": "@neokai/web",
	"version": "0.5.1",
	"type": "module",
	"license": "Apache-2.0",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"dev:old": "bun run css:build && bun run --bun css:watch & bun run server:dev",
		"css:build": "tailwindcss --input src/styles.css --output src/styles.out.css",
		"css:watch": "tailwindcss --input src/styles.css --output src/styles.out.css --watch",
		"server:dev": "bun --watch src/index.ts",
		"build:old": "bun run build.ts",
		"start": "NODE_ENV=production bun src/server-prod.ts",
		"typecheck": "tsc --build",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "vitest run --reporter dot --coverage"
	},
	"dependencies": {
		"@preact/signals": "2.7.1",
		"clsx": "2.1.1",
		"highlight.js": "11.11.1",
		"marked": "17.0.1",
		"preact": "10.28.3"
	},
	"devDependencies": {
		"@preact/preset-vite": "2.10.3",
		"@tailwindcss/vite": "4.1.18",
		"@testing-library/preact": "3.2.4",
		"@types/bun": "1.3.9",
		"@vitest/coverage-v8": "4.0.18",
		"@vitest/ui": "4.0.18",
		"happy-dom": "20.6.1",
		"tailwindcss": "4.1.18",
		"typescript": "5.9.3",
		"vite": "7.3.1",
		"vitest": "4.0.18"
	}
}
